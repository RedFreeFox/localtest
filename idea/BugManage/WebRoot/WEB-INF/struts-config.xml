<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />


  <form-beans >
    <form-bean name="userForm" type="org.bugManage.web.struts.form.UserForm" />
    <form-bean name="bugForm" type="org.bugManage.web.struts.form.BugForm" />
    <form-bean name="projectForm" type="org.bugManage.web.struts.form.ProjectForm" />
    <form-bean name="modelForm" type="org.bugManage.web.struts.form.ModelForm" />
  </form-beans>

  <global-exceptions />
  <global-forwards />

  <action-mappings >
  <!-- 用户UserInfo -->
   <action
      name="userForm"
      parameter="method"
      path="/user"
      scope="request"
      type="org.bugManage.web.struts.action.UserAction"
      validate="false">
      <forward name="login" path="/user.do?method=LoadIndex" />
      <forward name="LoadIndex" path="/page/index.jsp" />
      <forward name="ExitLogin" path="/login.jsp" />
      <forward name="error" path="/login.jsp" />
      <forward name="show" path="/user.do?method=FindAll" />
      <forward name="FindAll" path="/page/files/Test/AdminUserInfoManageAddU.jsp" />
      <forward name="updateUI" path="/page/files/Test/AdminUpdateUser.jsp" />
      <forward name="updatePwd" path="/page/files/Test/UpdatePwd.jsp" ></forward>
      <forward name="updateUserInfo" path="/page/files/Test/UpdateUser.jsp" ></forward>
    </action>
  <!-- 项目表Project -->
    <action
      name="projectForm"
      parameter="method"
      path="/project"
      scope="request"
      type="org.bugManage.web.struts.action.ProjectAction"
      validate="false">
      <forward name="AddProjectModel" path="/page/files/Test/ModifyProject.jsp" />
      <forward name="AddProjectInfo" path="/ModifyProject.jsp" />
      <forward name="ToModifyProjectInfo" path="/page/files/Test/ManageAddmokuai.jsp" />
      <forward name="ModifyProjectInfo" path="/page/files/Test/ManageAddmokuai.jsp" />
      <forward name="LookProjectInfo" path="/page/files/Test/TestProjectView.jsp" />
      <forward name="LookProject" path="/page/files/Test/ManageAddmokuai.jsp" />
      <forward name="FindProjectInfo" path="/page/files/Test/AdminManageAddP.jsp" />
      <forward name="ToModifyProjectInfo" path="/page/files/Test/AdminUpdatePro.jsp" />
      <forward name="ModifyProjectInfo" path="/project.do?method=FindProjectInfo" />
      <forward name="DeleteProject" path="/project.do?method=FindProjectInfo" />
    </action>
    <!-- 报表Report -->
    <action
      parameter="method"
      path="/report"
      scope="request"
      type="org.bugManage.web.struts.action.ReportAction"
      validate="false">
      <forward name="LoadReport" path="/page/files/Test/TongjiDetil.jsp" />
      <forward name="ModuleReport" path="/success.jsp" />
    </action>
    <!-- 项目模块表ProjectModel -->
    <action
      attribute="modelForm"
      name="modelForm"
      parameter="method"
      path="/model"
      scope="request"
      type="org.bugManage.web.struts.action.ModelAction"
      validate="false">
      <forward name="ToAdminProModel" path="/page/files/Test/AdminManageProMokuai.jsp" />
      <forward name="ToProjectModel" path="/model.do?method=ToAdminProModel" />
      <forward name="ModifyProjectModel" path="/model.do?method=ToAdminProModel" />
      <forward name="ToAdminProUser" path="/page/files/Test/AdminManageProUser.jsp" />
      <forward name="DelProjectModel" path=" " />
    </action>
    <!-- BUGAciton -->
    <action
      attribute="bugForm"
      input="/index.jsp"
      name="bugForm"
      parameter="method"
      path="/bug"
      scope="request"
      type="org.bugManage.web.struts.action.BugAction" >
      <forward name="test" path="/model.jsp" />
      <forward name="showBugView" path="/page/files/Test/TestBugView.jsp" />
      <forward name="showBugShow" path="/page/files/Test/TestBugShow.jsp" />
      <forward name="showBugAdd" path="/page/files/Test/TestaddBug.jsp" />
      <forward name="showBugUpdate" path="/page/files/Test/TestUpdateBug.jsp" />
      <forward name="ToAdminProUsers" path="/model.do?method=ToAdminProUser" />
    </action>

 
  </action-mappings>



  <controller processorClass="org.springframework.web.struts.DelegatingRequestProcessor"></controller>
  <message-resources parameter="org.bugManage.web.struts.ApplicationResources" />
</struts-config>

